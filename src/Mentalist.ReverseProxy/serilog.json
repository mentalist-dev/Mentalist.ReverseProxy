{
    "Serilog": {
        "MinimumLevel": {
            "Default": "Debug",
            "Override": {
                "Microsoft.AspNetCore.HostFiltering": "Warning",
                "Microsoft.AspNetCore.Routing": "Warning",
                "Microsoft.AspNetCore.Watch": "Warning",
                "Microsoft.AspNetCore.Server": "Warning",
                "Microsoft.Extensions.Http.DefaultHttpClientFactory": "Warning",
                "System.Net.Http.HttpClient": "Warning",
                "Yarp.ReverseProxy.Health.ActiveHealthCheckMonitor": "Warning"
            }
        },
        "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"],
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fffffff} [{RequestId}] [{SourceContext}] [{Level}] {Message}{NewLine}{Exception}"
                }
            },
            {
                "Name": "File",
                "Args": {
                    "path": "logs/reverse-proxy/reverse-proxy-.log",
                    "rollingInterval": "Day",
                    "fileSizeLimitBytes": "104857600",
                    "rollOnFileSizeLimit": true,
                    "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.ffffff}] {MachineName} {ThreadId} {RequestId} {CorrelationId} {Level:u3} {SourceContext} {Message}{NewLine}{Exception}"
                }
            }
        ]
    }
}